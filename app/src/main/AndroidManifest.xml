<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="wang.tyrael.learnandroid">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name=".LearnApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="learn.view.constraintlayout.CLGroupActivity"
            android:exported="false" />
        <activity
            android:name=".view.edittext.EditTextFocusActivity"
            android:exported="false" />
        <activity
            android:name=".view.ViewAlphaActivity"
            android:exported="false" />
        <activity
            android:name="com.github.aaronengi.learn.android.intent.IntentActivity"
            android:exported="true"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar"
            tools:targetApi="24">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.aaronengi.learn.android.fragment.ItemDetailHostActivity"
            android:exported="false"
            android:label="@string/title_activity_item_detail_host"
            android:resizeableActivity="true"
            tools:targetApi="24" />
        <activity
            android:name="com.github.aaronengi.learn.android.popupwindow.PopupWindowActivity"
            android:exported="false" />
        <activity android:name=".view.layout.LinearLayoutActivity" />
        <activity android:name=".view.ViewVisibilityActivity" />
        <activity android:name=".view.layout.TableLayoutActivity" />
        <activity android:name=".view.layout.RelativeLayoutActivity" />
        <activity android:name=".view.MaxMinXxxActivity" />
        <activity android:name=".view.popupwindow.PopupLocationActivity" />
        <activity
            android:name=".view.background.LearnBackgroundActivity"
            android:theme="@style/LearnBackgoundRed" />
        <activity android:name=".view.TextViewActivity" />
        <activity android:name=".view.edittext.NoImeEditTextActivity" />
        <activity android:name=".view.layout.CenterWithoutOverlapActivity" />
        <activity android:name=".view.systemalert.LearnSystemAlertActivity" />
        <activity android:name=".view.toast.ToastActivity" />
        <activity android:name=".view.layout.GridLayoutActivity" />
        <activity android:name=".view.ImageViewActivity" />
        <activity android:name=".view.recyclerview.RecyclerViewGridLayoutActivity" />
        <activity android:name=".ConstraintLayoutActivity" />
        <activity android:name=".view.ListViewActivity" />
        <activity
            android:name="learn.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StorageFillerActivity"
            android:exported="true"
            android:label="StorageFillerActivity"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>