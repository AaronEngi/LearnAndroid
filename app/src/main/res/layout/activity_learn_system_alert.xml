<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.systemalert.LearnSystemAlertActivity">

    <Button
        android:id="@+id/bn_request_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="权限开关"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bn_show_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹窗"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_request_permission" />

    <TextView
        android:id="@+id/tv_permission_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_show_dialog"
        tools:text="TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>