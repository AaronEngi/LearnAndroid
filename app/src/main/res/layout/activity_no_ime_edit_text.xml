<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.edittext.NoImeEditTextActivity">

    <wang.tyrael.learnandroid.view.edittext.NoImeEditText
        android:id="@+id/noImeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="hit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加字符"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noImeEditText" />

    <Switch
        android:id="@+id/switch_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="允许输入法"
        android:textOff="禁止输入法"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_add" />

    <Button
        android:id="@+id/bn_open_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开键盘"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_ime" />

    <Button
        android:id="@+id/bn_close_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭键盘"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_open_keyboard" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:elevation="2dp"
        android:text="覆盖覆盖"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bn_open_keyboard" />

    <TextView
        android:id="@+id/tv_test_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试textwatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>